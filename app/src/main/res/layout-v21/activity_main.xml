<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center"
        android:orientation="vertical">


    <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center">

        <TextView
                android:id="@+id/tv_title"
                android:text="我是标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"/>

    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


        <LinearLayout
                android:id="@+id/ll_button_group"
                android:layout_width="match_parent"
                android:minHeight="800dp"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry">

            <Button android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ripe_item"
                    android:text="流式布局"
                    android:id="@+id/flow"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="快速索引"
                    android:id="@+id/quick"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黏性头部"
                    android:id="@+id/stick"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日历控件"
                    android:id="@+id/menu"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="骨架屏"
                    android:id="@+id/skeleton"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自定义拍照"
                    android:id="@+id/custom_photo"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="flutter页面跳转"
                    android:id="@+id/h5_page"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Material页面"
                    android:id="@+id/material_page"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蓝牙页面"
                    android:id="@+id/bluetooth_page"/>






        </LinearLayout>

    </ScrollView>


</LinearLayout>